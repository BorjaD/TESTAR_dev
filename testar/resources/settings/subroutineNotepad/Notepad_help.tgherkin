  Feature: Notepad Help

  Scenario: Show application information
    Step: Select Help
    When  $Role="UIAMenuItem" and $Title="Help" doubleClick(true)
    Step: Select Over Kladblok
    When  $Role="UIAMenuItem" and $Title="Over Kladblok" click(true)
    Step: Accept tekst
    While state($Role="UIAButton" and $Title="OK")
    When  $Role="UIAButton" and $Title="OK" click(true)
    Step: Default focus
    When  $Role="UIAEdit" and $Title="Teksteditor" click(true)