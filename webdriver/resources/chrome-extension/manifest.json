{
  "manifest_version": 2,
  "name": "TESTAR webdriver extension",
  "description": "Define JavaScript functions for TESTAR",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "permissions": ["tabs", "<all_urls>"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["testar.init.start.js"],
    "run_at": "document_start"
  }, {
    "matches": ["<all_urls>"],
    "js": ["testar.init.end.js"],
    "run_at": "document_end"
  }, {
    "matches": ["<all_urls>"],
    "css": ["css/style.css"]
  }],
  "web_accessible_resources": ["testar.state.js", "testar.canvas.js", "css/style.css"]
}